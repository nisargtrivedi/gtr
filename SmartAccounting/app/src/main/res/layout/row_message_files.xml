<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">


    <ImageView
        android:scaleType="center"
        android:id="@+id/imgFolder"
        android:src="@drawable/folder"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <TextView
        android:layout_toLeftOf="@id/tvFileCount"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_bold"
        android:text="N/A"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/imgFolder"
        android:textSize="@dimen/_13ssp"
        android:id="@+id/tvDocumentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@id/tvFileCount"
        android:layout_below="@id/tvDocumentName"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:text="N/A"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/imgFolder"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tvDocumentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:text="0 Files"
        android:background="@drawable/files_count"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_toLeftOf="@id/imgSendReceive"
        android:textSize="@dimen/_13ssp"
        android:id="@+id/tvFileCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp" />
    <ImageView
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        android:id="@+id/imgSendReceive"
        android:src="@drawable/send_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

</RelativeLayout>