<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center"
        android:id="@+id/cardImageOne"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/_30sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp">
        <ImageView
            android:src="@drawable/logo_white"
            android:id="@+id/imgUserLeft"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp">

        </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_toLeftOf="@id/tvCount"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/cardImageOne"
        android:text="N/A"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/popins_semi_bold"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_toLeftOf="@id/tvCount"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/cardImageOne"
        android:text="N/A"
        android:textColor="#666666"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/popins_semi_bold"
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_toLeftOf="@id/tvCount"
        android:layout_below="@id/tvTime"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/cardImageOne"
        android:text="N/A"
        android:textColor="#A1A5C5"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/popins_regular"
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_centerVertical="true"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/popins_semi_bold"
        android:id="@+id/tvCount"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="0 files"
        android:background="@drawable/file_count_bg"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp" />
</RelativeLayout>
</layout>